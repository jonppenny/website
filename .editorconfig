root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

[*.{txt,md}]
indent_style = space
indent_size = 4

[*.{html,css,scss,sass,xml}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 4
