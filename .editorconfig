indent_size = 4
insert_final_newline = true

[*.{c,cpp,h,inl}]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.{txt,md}]
indent_style = space
indent_size = 4

[*.{html,css,scss,sass,js,xml}]
indent_style = space
indent_size = 2
