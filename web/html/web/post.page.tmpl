{{template "base" .}}
{{define "title"}}{{.Post.Title}}{{end}}
{{define "main"}}
{{with .Post}}
<div class='container'>
    <div class="row">
        <div class="col-12 col-lg-3">
            {{if ne .Image ""}}
            <img src="/static/media/{{.Image}}" alt="{{.Title}}" class="d-block" style="width: 100%;"/>
            {{end}}
        </div>
        <div class="col-12 col-lg-9">
            <div class='metadata'>
                <h1>{{.Title}}</h1>
                <span>Posted on: {{humanDate .Created}}</span>
            </div>
            <div>
                {{.Content}}
            </div>
        </div>
    </div>
</div>
{{end}}
{{end}}